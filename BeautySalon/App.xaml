<Application x:Class="BeautySalon.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BeautySalon"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="StyleSystemButton">
            <Setter Property="Background" Value="Aqua"></Setter>
            <Setter Property="Foreground" Value="Green"></Setter>
            <Setter Property="FontFamily" Value="Times New Roman"></Setter>
        </Style>
        <Style TargetType="Button" x:Key="ActionStyleButton">
            <Setter Property="Background" Value="Pink"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
            <Setter Property="FontFamily" Value="Comic Sans"></Setter>
        </Style>
    </Application.Resources>
</Application>
