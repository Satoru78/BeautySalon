<Page x:Class="BeautySalon.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalon.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Заполнить анкету" Name="ClientDataBtn" Click="ClientDataBtn_Click" Style="{StaticResource ResourceKey=StyleSystemButton}" Width="150"></Button>
            <Button Content="Оформить услугу" Name="ServiceAddBtn" Click="ServiceAddBtn_Click" Style="{StaticResource ResourceKey=StyleSystemButton}" Width="150" Margin="0,10,0,10"/>
            <Button Content="Записи на услугу" Name="ServiceListBtn" Click="ServiceListBtn_Click" Style="{StaticResource ResourceKey=StyleSystemButton}" Width="150" />
        </StackPanel>
    </Grid>
</Page>
